<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oyinloyeayodeji.www.frenchhackaton">

    <application
        android:allowBackup="true"
        android:icon="@drawable/apprendre_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Duolingo.ColorsActivity" />
        <activity android:name=".Duolingo.PhrasesActivity" />
        <activity android:name=".Duolingo.FamilyActivity" />
        <activity android:name=".Duolingo.NumbersActivity" />
        <activity android:name=".Duolingo.BodyActivity" />
        <activity android:name=".Duolingo.WeekdaysActivity" />
        <activity android:name=".Duolingo.MonthsActivity" />
        <activity android:name=".Duolingo.AlphabetsActivity" />
        <activity android:name=".LogInActivity"/>
        <activity android:name=".SignUpActivity"/>
        <activity android:name=".ChatRoomActivity"></activity>
    </application>

</manifest>